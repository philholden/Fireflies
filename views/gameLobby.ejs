  <script>
    requestAnimationFrame = window.requestAnimationFrame || window.mozRequestAnimationFrame ||  
                        window.webkitRequestAnimationFrame || window.msRequestAnimationFrame;
    var en = new Engine();
    var kb = new Keyboard();
    var a=0;
    var man;
    var input;
    var st = Date.now();
    var man;
    var rd;
    var gc;
    var audio;
    var lobby;
    var dbId = <%- id %>;
    
    function loop(){
      input = $("input[type=text]");
      body = $("body");
      requestAnimationFrame(step);
      body.keyup(function(e){key(kb.keyUp(e.keyCode))});
      body.keydown(function(e){
        key(kb.keyDown(e.keyCode));
        if(lobby && lobby.displayGame()){
          e.preventDefault();
        }  
      });
    }
    
    function key(k){
      if(k && gc){
        gc.socket.json.send(keyEncode(k));
      }
    }
    
    function keyEncode(k){
      return k + en.me + ":" + en.frameId(); 
    }
    
    function keyDecode(c){
      var sp = c.split(':');
      return {
        e:c.charAt(0),
        id:sp.substr(1),
        f:sp[1]
      };
    }
    
    function step(timestamp) {
      if (rd) {
        rd.draw(en);
        en.render++;
      }
      if(en.go){
        requestAnimationFrame(step);
      }
    }
    
    $(window).load(function(){
      var w = new World();
      rd = new Renderer($('#game'),w);
      rd.init();
      audio = $('audio');
      audio.each(function(i,a){
        a.load();
      });
      setTimeout(function(){
        gc = new gameChannel();
      },500);
      lobby = new LobbyViewModel();
      ko.applyBindings(lobby);
      lobby.loaded(true);
    });
    
    $(window).ready(function(){
      var i;
      var div;
      for (i=0;i<360;i++) {
        div = $('<div rel="'+i+'"></div>');
        div.css({background:'hsl('+i+',100%,50%)'});
        $('#color').append(div);
      };
      $('#color').mousedown(function(e){e.preventDefault();});
      $('#color').mouseup(function(e){
//        $('#color div').removeClass('selected');
        var tar = $(e.target);
//        tar.addClass('selected');
        gc.socket.json.emit('color',{'hue':tar.attr('rel')});
      });
    });

  </script>
  
